<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <h2>Edit Your listing</h2>
                <br>
                <form action="/listings/<%= listing.id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Enter title" value="<%= listing.title %>"
                            class="form-control" required>
                            <div class="valid-feedback">Title looks good</div>
                            <div class="invalid-feedback">Please Enter a valid Tittle</div>
                    </div>
                    <div class="mb-4">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="Enter description"
                            class="form-control" required><%= listing.description %></textarea>
                    </div>
                    <div class="mb-4">
                        Original Image: <br>
                        <img src="<%= originalImageUrl %>" alt="listing image"  style="max-width: 200px;"> 
                    </div>
                    <div class="mb-4">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input type="file" name="listing[image]" 
                        class="form-control"> 
                    </div>
