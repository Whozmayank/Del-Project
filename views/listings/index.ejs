<% layout("/layouts/boilerplate.ejs") %>
    <br>
    
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin-right: 1rem;
            padding: 10px;
            opacity: 0.6;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }
        .filter a {
            text-decoration: none;
            color: black;
        }
        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 0.85rem;
            height: 2.5rem;
            align-items: center;
            display: flex;
            padding: 1rem;
            margin-right: 1rem;
            margin-left: auto;
            margin-bottom: 1rem;
        }
        

    </style>

     <div id="filters" class="navbar navbar-expand-lg bg-white">
        <div class="filter">
            <a href="/listings"><div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p></a>
        </div>
        <div class="filter">
            <a href="/listings"><div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p></a>
        </div>
         <div class="filter">
            <a href="/listings"><div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p></a>
        </div>
        <div class="filter">
            <a href="/listings"><div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p></a>
        </div>
        <div class="filter">
            <a href="/listings"><div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p></a>
        </div>
        <div class="filter">
            <a href="/listings"><div><i class="fa-solid fa-chess-rook"></i></div>
            <p>Castles</p></a>
        </div>
        <div class="filter">
            <a href="/listings"><div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing pools</p></a>
        </div>
         <div class="filter">
            <a href="/listings"><div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p></a>
        </div>
        <div class="filter">
           <a href="/listings"> <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p></a>
        </div>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexswitchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
             </div>
        </div>
     </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
            <% for(let listing of allListings) { %>
                <a href="/listings/<%= listing.id %>" class="listing-link">
                    <div class="card mt-3 listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 15rem">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                           <!-- <p class="mb-0"><%= listing.title %></p> -->
                          <p class="card-text">
                            <b><%= listing.title %></b><br>
                            &#8377;<%= Number(listing.price).toLocaleString("en-In") %>/night
                            <i class="tax-info"> &nbsp; &nbsp; +18% GST  </i>
                        </p>
                        </div>
                      </div>
                </a>
                <% } %>
        </div>


        <script>
            let taxSwitch = document.getElementById("flexswitchCheckDefault");
            taxSwitch.addEventListener("click", () => {
                let taxInfo = document.getElementsByClassName("tax-info");
                for (info of taxInfo) {
                    info.style.display = taxSwitch.checked ? "inline" : "none"; 
                }
            });
        </script>



