<% layout("/layouts/boilerplate.ejs") %>

 <div class="row mt-3">
     <div class="col-6 offset-3">
           <form action="/signup" method="POST" novalidate class="needs-validation">
                <h2>Sign Up On Wanderlust</h2><br>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" placeholder="Enter your username" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Please enter a username</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" placeholder="Enter your email" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Please enter a valid email</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Enter your password" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Please enter a password</div>
                </div>
                <button type="submit" class="btn btn-dark add-btn mt-5 mb-3">Sign Up</button>
                
                    <p>Already have an account? <a href="/login">Login</a></p>

         </form>
     </div>
</div>