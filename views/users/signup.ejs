<% layout("/layouts/boilerplate.ejs") %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <form action="/signup" method="POST" novalidate class="needs-validation p-4 border rounded bg-light shadow-sm">
                <h2 class="mb-4 text-center">Sign Up On Wanderlust</h2>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" placeholder="Enter your username" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Please enter a username</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" placeholder="Enter your email" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Please enter a valid email</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Enter your password" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Please enter a password</div>
                </div>
                <button type="submit" class="btn btn-dark w-100 mt-4 mb-2">Sign Up</button>
                <p class="text-center mt-3">Already have an account? <a href="/login">Login</a></p>
            </form>
        </div>
    </div>
</div>